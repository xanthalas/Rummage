<Window x:Class="Rummage.HistoryPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xwc="clr-namespace:XanWPFControls;assembly=XanWPFControls" Title="Rummage - History selector" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        Closing="Window_Closing"
        >
    <DockPanel>
        <Grid DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Name="btnOk" Grid.Column="0" IsDefault="True" Click="btnOk_Click">Ok</Button>
            <Button Name="btnCancel" Grid.Column="1" IsCancel="True" Click="btnCancel_Click">Cancel</Button>
        </Grid>
        <xwc:SmartChooser Name="chooser" MouseDoubleClick="chooser_MouseDoubleClick"></xwc:SmartChooser>
    </DockPanel>
</Window>
