<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="Rummage.RummageAbout"
        Title="About Rummage" Height="200" Width="400" Background="{x:Null}"
        WindowStyle="None" AllowsTransparency="True"
    >
    <Grid MouseLeftButtonUp="close_Click">
    	<ed:Callout AnchorPoint="0.5,0.54" CalloutStyle="Rectangle" Fill="DodgerBlue" FontSize="16" Height="200" Stroke="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Width="400" BorderBrush="#FF9CC3E5" BorderThickness="0">
    		<StackPanel>
    			<Label HorizontalAlignment="Center">Rummage v 0.3 (Alpha release)</Label>
				<Label HorizontalAlignment="Center">Copyright (c) 2014 Xanthalas</Label>
                <Label HorizontalAlignment="Center">Released under the GNU Public license</Label>
                <Label>
                    <Hyperlink NavigateUri="https://github.com/xanthalas/Rummage" RequestNavigate="Hyperlink_RequestNavigate">https://github.com/xanthalas/Rummage</Hyperlink>
                </Label>
			</StackPanel>  	
		</ed:Callout>
    </Grid>
</Window>
